#!/bin/sh

PREREQ=""
prereqs()
{
	echo "$PREREQ"
}

case $1 in
prereqs)
	prereqs
	exit 0
	;;
esac

set -e

exit 0

if [ -f /scripts/functions ] ; then
    . /scripts/functions
fi

if [ -f /scripts/local ] ; then
    . /scripts/local
fi

log_success_msg "init-bottom balena-stage2-resized started"

if [ -f /etc/balena-migrate.conf ] ; then
    . /etc/balena-migrate.conf
else
    panic "balena-migrate.conf not found"
fi

if [ -f /scripts/balena-common ] ; then
    . /scripts/balena-common
else
		panic  "/scripts/balena-common not found"
fi

if [  "$STRATEGY" != "RESIZE" ] ; then
    log_success_msg "local-premount balena-stage2-resized not enabled"
    exit 0
fi

log_begin_msg "creating mountpoint on ${MIGRATE_TMP}"

# echo "${NEW_PART_NAME} ${MIGRATE_TMP} ${NEW_PART_FS}	defaults	0   2" >> /etc/fstab

mkdir -p ${MIGRATE_TMP}
if [ ! -d ${MIGRATE_TMP} ] ; then
     panic "failed to create mount directory in ${MIGRATE_TMP}"
fi
log_end_msg

# _log_msg "would attempt: mount -t  ${NEW_PART_FS} ${NEW_PART_NAME} ${MIGRATE_TMP}"

local_mount_fs "${MIGRATE_TMP}" || panic "failed to mount ${MIGRATE_TMP}"

_log_msg "$(df)"

# mount -t  "${NEW_PART_FS}" "${NEW_PART_NAME}" "${MIGRATE_TMP}" || panic "failed: mount -t  ${NEW_PART_FS} ${NEW_PART_NAME} ${MIGRATE_TMP}"

# log_success_msg "mounted ${NEW_PART_NAME}"
